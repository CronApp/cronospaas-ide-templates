{
	"name": "cronos-components-mobile-phonegap",
	"version": "1.0.0",
	"components": [
		{
			"name": "crn-button",
			"text": "Button",
			"class": "cpn cpn-button",
			"templateURL": "src/main/mobileapp/www/components/templates/button.template.html",
			"properties": {
				"ng-click": {
					"removable": true,
					"type": "event"
				},
				"onmouseover": {
					"removable": true,
					"type": "event"
				}
			}
		},
		{
			"name": "crn-textinput",
			"text": "Input",
			"class": "cpn cpn-textinput",
			"templateURL": "src/main/mobileapp/www/components/templates/textinput.template.html",
			"properties": {
				"onchange": {
					"removable": true,
					"type": "event"
				}
			}
		},
		{
			"name": "crn-image",
			"text": "Image",
			"class": "cpn cpn-image",
			"template": "<img ng-src=\"http://placehold.it/50x50\" class=\"\" width=\"50\" height=\"50\" />",
			"properties": {
				"src": {
					"removable": false,
					"type": "projectResource",
					"resourceType": "image/jpeg,image/gif,image/png"
				},
				"onclick": {
					"removable": true,
					"type": "event"
				}
			}
		},
		{
			"name": "crn-datasource",
			"text": "Datasource",
			"class": "cpn cpn-datasource",
			"template": "<datasource name=\"\" entity=\"\" keys=\"\" rows-per-page=\"100\" on-before-create=\"\" on-after-create=\"\" on-before-update=\"\" on-after-update=\"\" on-before-delete=\"\" on-after-delete=\"\"><i class=\"cpn cpn-datasource\" ></i></datasource>",
			"properties": {
				"entity": {
					"removable": false,
					"type": "datasourceList"
				},
				"keys": {
					"removable": false,
					"type": "datasourceKeys"
				},
				"filter": {
					"removable": true,
					"global": true
				},
				"on-before-create": {
					"removable": true,
					"type": "event",
					"global": true
				},
				"on-before-update": {
					"removable": true,
					"type": "event",
					"global": true
				},
				"on-before-delete": {
					"removable": true,
					"type": "event",
					"global": true
				},
				"on-after-create": {
					"removable": true,
					"type": "event",
					"global": true
				},
				"on-after-update": {
					"removable": true,
					"type": "event",
					"global": true
				},
				"on-after-delete": {
					"removable": true,
					"type": "event",
					"global": true
				},
				"on-error": {
					"removable": true,
					"type": "event",
					"global": true
				}
			}
		}
	]
}
{
   "name":"cronos-components-mobile-phonegap",
   "version":"1.0.0",
   "components":[
      {
         "name":"crn-div",
         "text":"Div",
         "class":"cpn cpn-vertical-grid",
         "templateURL":"src/main/mobileapp/www/components/templates/div.template.html",
         "properties":{
            "onclick":{
               "type":"event"
            }
         }
      },
      {
         "name":"crn-button",
         "text":"Button",
         "class":"cpn cpn-button",
         "templateURL":"src/main/mobileapp/www/components/templates/button.template.html",
         "properties":{
            "ng-click":{
               "removable":true,
               "type":"event"
            },
            "onmouseover":{
               "removable":true,
               "type":"event"
            }
         }
      },
      {
         "name":"crn-textinput",
         "text":"Input",
         "class":"cpn cpn-textinput",
         "templateURL":"src/main/mobileapp/www/components/templates/textinput.template.html",
         "properties":{
            "onchange":{
               "removable":true,
               "type":"event"
            }
         }
      },
      {
         "name":"crn-combobox",
         "text":"Combobox",
         "class":"cpn cpn-combobox",
         "templateURL":"src/main/mobileapp/www/components/templates/combobox.template.html",
         "handleRules":{
            "canToggle":true,
            "rules":[
               {
                  "toggleSelector":"ui-select-choices",
                  "toggleClass":"invisible"
               }
            ]
         },
         "childrenProperties":[
            {
               "name":"crn-datasource",
               "selector":"ui-select",
               "displayName":"items"
            },
            {
               "name":"ng-model",
               "selector":"ui-select",
               "displayName":"ng-model"
            },
            {
               "name":"repeat",
               "selector":"ui-select-choices",
               "displayName":"repeat"
            }
         ]
      },
      {
         "name":"crn-image",
         "text":"Image",
         "class":"cpn cpn-image",
         "template":"<img ng-src=\"http://placehold.it/50x50\" class=\"\" width=\"50\" height=\"50\" />",
         "properties":{
            "src":{
               "removable":false,
               "type":"projectResource",
               "resourceType":"image/jpeg,image/gif,image/png"
            },
            "onclick":{
               "removable":true,
               "type":"event"
            }
         }
      },
      {
         "name":"crn-datasource",
         "text":"Datasource",
         "class":"cpn cpn-datasource",
         "template":"<datasource name=\"\" entity=\"\" keys=\"\" rows-per-page=\"100\" on-before-create=\"\" on-after-create=\"\" on-before-update=\"\" on-after-update=\"\" on-before-delete=\"\" on-after-delete=\"\"><i class=\"cpn cpn-datasource\" ></i></datasource>",
         "properties":{
            "entity":{
               "removable":false,
               "type":"datasourceList"
            },
            "keys":{
               "removable":false,
               "type":"datasourceKeys"
            },
            "filter":{
               "removable":true,
               "global":true
            },
            "on-before-create":{
               "removable":true,
               "type":"event",
               "global":true
            },
            "on-before-update":{
               "removable":true,
               "type":"event",
               "global":true
            },
            "on-before-delete":{
               "removable":true,
               "type":"event",
               "global":true
            },
            "on-after-create":{
               "removable":true,
               "type":"event",
               "global":true
            },
            "on-after-update":{
               "removable":true,
               "type":"event",
               "global":true
            },
            "on-after-delete":{
               "removable":true,
               "type":"event",
               "global":true
            },
            "on-error":{
               "removable":true,
               "type":"event",
               "global":true
            }
         }
      }
   ]
}
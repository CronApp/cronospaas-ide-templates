{
  "name": "cronos-components",
  "version": "1.0.0",
  "components": [
      {
        "name" : "crn-anchor", 
        "text" : "Link",
        "class" : "cpn cpn-anchor",
        "templateURL" : "webcontent/components/templates/anchor.template.html",
   
        "dependences" : {
          "editor" : ["components/js/events/events.controller.js"],
          "runtime" : []
        }, 
        
        "properties" : {
          "onclick": {
               "displayName" : "On Click",
               "removable" : false,
               "type" : "custom",
               "customFile" : "components/templates/events.template.html",
               "customController" : "InspectorEventsController"
          },  
          
          "onmouseover": {
               "displayName" : "On Mouse Over",
               "removable" : false,
               "type" : "custom",
               "customFile" : "components/templates/events.template.html",
               "customController" : "InspectorEventsController"
          },          
          
          "target": {
               "displayName" : "Target",
               "removable" : false,
               "type" : "list",
               "options" : [
                 {"key": "_blank", "value": "Nova janela"},
                 {"key": "_self", "value": "Mesma janela"},
                 {"key": "_parent", "value": "Janela pai"},
                 {"key": "_top", "value": "Top"}
               ]
            },
            "href": {
               "displayName" : "Link",
               "removable" : false,
               "type" : "projectResource",
               "resourceType" : "text/html"
            }
        }
      },
      {
        "name" : "crn-button",
        "text" : "Button",
        "class" : "cpn cpn-button",
        "templateURL" : "webcontent/components/templates/button.template.html"
      },
      {
        "name" : "crn-datasource",
        "text" : "Datasource",
        "class" : "cpn cpn-datasource",
        "template" : "<datasource name=\"\" entity=\"\" key=\"\" endpoint=\"api/rest\"><i class=\"cpn cpn-datasource\"></i></datasource>",
        "properties" : {
          "entity": {
               "displayName" : "Datasource",
               "removable" : false,
               "type" : "datasourceList"
          },
          "key": {
               "displayName" : "Key",
               "removable" : false,
               "type" : "fieldList",
               "filteredBy" : "entity"
          }
        }
      },
      {
        "name" : "crn-textinput", 
        "text" : "Caixa de texto",
        "class" : "cpn cpn-textinput", 
        "templateURL" : "webcontent/components/templates/textinput.template.html",
        "dependences" : {
          "editor" : ["components/object-inspector/js/ng-model.controller.js"],
          "runtime" : []
        },
        "properties" : {
          "ng-model": {
               "displayName" : "Model",
               "removable" : false,
               "type" : "custom",
               "customFile" : "components/object-inspector/templates/ng-model.template.html"
          }
        }
      },
      {
        "name" : "crn-image",
        "text" : "Image",
        "class" : "cpn cpn-image",
        "template" : "<img src=\"http://placehold.it/50x50\" class=\"\" width=\"50\" height=\"50\" />",
        "properties" : {
          "src": {
               "displayName" : "Arquivo",
               "removable" : false,
               "type" : "projectResource",
               "resourceType" : "image/jpeg,image/gif,image/png"
          }
        }
      },
      {
        "name" : "crn-vertical-container",
        "text" : "Vertical Grid",
        "class" : "cpn cpn-vertical-grid",
        "template" : "<div class=\"crn-layout-container\"><div class=\"row\"><div class=\"\"><div data-container=\"true\">Content goes here</div></div></div><div class=\"row\"><div class=\"\"><div data-container=\"true\">Content goes here</div></div></div></div>",
        "handleRules" : {
          "canOrder" : false,
          "canActivate" : false,
          "canIncrement" :true,
          "rules" : [
            {
              "sourceHTML" : "<div class=\"row\"><div class=\"\"><div data-container=\"true\">Content goes here</div></div></div>",
              "targetSelector" : "div.crn-layout-container"
            }
          ]
        }
      },
      {
        "name" : "crn-horizontal-container",
        "text" : "Horizontal Grid",
        "class" : "cpn cpn-horizontal-grid",
        "template" : "<div class=\"row\">\r\n        <div class=\"column col-md-4\"><div data-container=\"true\">Content goes here</div></div>\r\n        <div class=\"column col-md-4\"><div data-container=\"true\">Content goes here</div></div>\r\n      </div>",
        "handleRules" : {
          "canOrder" : false,
          "canActivate" : false,
          "canIncrement" :true,
          "rules" : [
            {
              "sourceHTML" : "<div class=\"column col-md-4\"><div data-container=\"true\">.col-md-4</div></div>",
              "targetSelector" : "div.row"
            }
          ]
        }
      },
      {
        "name" : "crn-form",
        "text" : "Form",
        "class" : "cpn cpn-form",
        "templateURL" : "webcontent/components/templates/form.template.html",
        "properties" : {
          "crn-datasource" : {
              "displayName" : "Datasource",
               "removable" : false,
               "type" : "datasourceList"
          }
        }
      },
      {
        "name" : "crn-tabs", 
        "text" : "Tabs",
        "class" : "cpn cpn-tabs",
        "handleRules" : {
          "canOrder" : true,
          "canActivate" : true,
          "canIncrement" :true,
          "rules" : [
            {
              "activeSelector" : "ul.nav-tabs li.active",
              "activeClass" : "active",
              "sourceHTML" : "<li role=\"presentation\"><a data-target=\"#tab${RANDOM}\" role=\"tab\" data-toggle=\"tab\">New Tab</a></li>",
              "targetSelector" : "ul.nav-tabs"
            },
            {
              "activeSelector" : "div.tab-content .tab-pane.active",
              "activeClass" : "active",
              "sourceHTML" : "<div role=\"tabpanel\" class=\"tab-pane\" id=\"tab${RANDOM}\"><div class=\"\" data-container=\"true\"></div>",
              "targetSelector" : "div.tab-content"
            }
          ]
        },
        "controller" : "TabsNavigationController",
        "templateURL" : "webcontent/components/templates/tabs.template.html",
        "dependences" : {
          "editor" : ["components/object-inspector/js/tabs.controller.js"],
          "runtime" : []
        },
        "navigationController" : "TabsNavigationController",
        "properties" : {
          "active": {
               "displayName" : "Active",
               "removable" : false,
               "type" : "custom",
               "customFile" : "components/object-inspector/templates/radio-list.template.html",
               "customController" : "TabsActiveItemController",
               "global" : true,
               "disableInput" : true
          }
        }
      },
      {
        "name" : "crn-datepicker",
        "text" : "Date",
        "class" : "cpn cpn-datepicker",
        "templateURL" : "webcontent/components/templates/datepicker.template.html",
        "properties" : {

        }
      },
      {
        "name" : "crn-upload",
        "text" : "File Upload",
        "class" : "cpn cpn-upload",
        "templateURL" : "webcontent/components/templates/fileupload.template.html",
        "properties" : {
        }
      },
      {
        "name" : "crn-grid", 
        "text" : "Table",
        "class" : "cpn cpn-table", 
        "templateURL" : "webcontent/components/templates/grid.template.html",
        "properties" : {
          "crn-datasource" : {
              "displayName" : "Datasource",
               "removable" : false,
               "type" : "datasourceList"
          }
        },
        "handleRules" : {
          "canOrder" : true,
          "canActivate" : true,
          "canIncrement" :true,
          "rules" : [
            {
              "activeSelector" : ".table-header th.active",
              "activeClass" : "active",
              "sourceHTML" : "<th><div data-container=\"true\">New Title</div></th>",
              "targetSelector" : ".table-header"
            },
            {
              "activeSelector" : ".table-content td.active",
              "activeClass" : "active",
              "sourceHTML" : "<td><div data-container=\"true\"></div></td>",
              "targetSelector" : ".table-content"
            }
          ]
        }
      },
      {
        "name" : "crn-combobox", 
        "text" : "Combobox",
        "class" : "cpn cpn-combobox", 
        "templateURL" : "webcontent/components/templates/combobox.template.html",
        "handleRules" : {
          "canToggle" : true,
          "canIncrement" : true,
          "rules" : [
            {
              "toggleSelector" : ".dropdown-menu.option",
              "toggleClass" : "active",
              "sourceHTML" : "<li id=\"item${RANDOM}\" class=\"combo-item\"> <a href=\"#\"><div data-container=\"true\">Content Goes Here</div> </a></li>",
              "targetSelector" : ".dropdown-menu.option"
            }
          ]
        }
      },
      {
        "name" : "crn-combobox-dynamic", 
        "text" : "Dynamic Combobox",
        "class" : "cpn cpn-combobox-dynamic", 
        "templateURL" : "webcontent/components/templates/combobox-dynamic.template.html",
        "handleRules" : {
          "canToggle" : true,
          "rules" : [
            {
              "toggleSelector" : ".dropdown-menu.option",
              "toggleClass" : "active",
              "sourceHTML" : "<li id=\"item${RANDOM}\" class=\"combo-item\"> <a href=\"#\"><div data-container=\"true\">Content Goes Here</div> </a></li>",
              "targetSelector" : ".dropdown-menu.option"
            }
          ]
        },
        "properties" : {
          "crn-datasource" : {
              "displayName" : "Datasource",
               "removable" : false,
               "type" : "datasourceList"
          }
        }
      },
      {
        "name" : "crn-radiogroup", 
        "text" : "Radio Group",
        "class" : "cpn cpn-radiogroup", 
        "templateURL" : "webcontent/components/templates/radiogroup.template.html",
        "handleRules" : {
          "canIncrement" : true,
          "rules" : [
            {
              "sourceHTML" : "<div class=\"radio\">\n  <label class=\"\" crn-value value=\"Value Two\"> \n       <input type=\"radio\" name=\"optionsRadios\" id=\"optionsRadios${RANDOM}\" value=\"\"> \n       <span class=\"\">New option</span> \n </label> \n</div>",
              "targetSelector" : ".form-group"
            }
          ]
        }
      },
      {
        "name" : "crn-checkbox", 
        "text" : "Checkbox",
        "class" : "cpn cpn-checkbox", 
        "templateURL" : "webcontent/components/templates/checkbox.template.html"
      }
  ]
}